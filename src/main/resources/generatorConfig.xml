<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="params.properties"/>
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.LombokPlugin"/>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <property name="forceAnnotation" value="true"/>
            <property name="caseSensitive" value="false"/>
        </plugin>
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
            <property name="addRemarkComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="${driverClass}"
                        connectionURL="${connectionURL}"
                        userId="${userId}"
                        password="${password}">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!--
        生成系统级类时配置,如：sys_user：com.common.system.entity
        生成基本业务类时配置：com.biz.data.biz.basic.entity.
        生成业务类时配置：com.biz.work.ord.entity
        生成基本供应商类时配置：com.biz.common.sup.base.entity
        生成业务类时配置：
        -->

        <!--
        targetProject 的写法：
           1. 相对路径： src/main/java
           2. 相对路径: ${basedir}/../xxx/src/main/java
           3. 绝对路径：/Users/Charles/workspace/app-oms/src/main/java
        -->
        <javaModelGenerator targetPackage="${entity.package}"
                            targetProject="${target.project}">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--
        生成系统类时配置,如：sys_user：com.common.system
        生成基本业务类时配置：com.biz.work.ord
        生成基本供应商类时配置：com.biz.common.sup.basic.mapper
        生成业务类时配置：
        -->
        <!--
        targetProject 的写法：
           1. 相对路径： src/main/resources/mapper
           2. 相对路径: ${basedir}/../xxx/src/main/resources/mapper
           3. 绝对路径：/Users/Charles/workspace/app-oms/src/resources/mapper
        -->
        <sqlMapGenerator targetPackage="${xml.package}"
                         targetProject="${target.project}">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="${mapper.package}" type="XMLMAPPER"
                             targetProject="${target.project}">
            <!-- 在targetPackage的基础上，根据数据库的schema再生成一层package，最终生成的类放在这个package下，默认为false -->
            <property name="enableSubPackages" value="false"/>

            <!-- 可以为所有生成的接口添加一个父接口，但是MBG只负责生成，不负责检查-->
            <property name="rootInterface" value="com.core.base.BaseMapper"/>
        </javaClientGenerator>

        <table schema="zx_app" tableName="${table.name}" domainObjectName="${entity.name}"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
            <property name="rootClass" value="com.core.base.BaseEntity"/>
            <property name="useActualColumnNames" value="true"/>
            <columnOverride column="reqData" jdbcType="VARCHAR" />
            <columnOverride column="resData" jdbcType="VARCHAR" />
        </table>
    </context>
</generatorConfiguration>